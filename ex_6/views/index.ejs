<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
<title>Index</title>
</head>

<body>
    <% form_for("show", function(f){ %>
    <%- f.label_for("name : ") %>
    <%- text_field_tag("name",{"value":''}) %><br />
    <%- f.label_for("Gender : ") %>
    <%- select_tag("gender",[{"value":'male',"text":"male"},{"value":'female',"text":"female"}],{"value":'male'}) %>
    <br />


    <%- f.submit({class: 'ui classic button blue'}) %><br />
<% }) %>

</body>

</html>
